    <script src="../../../js/app.js"></script>
    <title>Izmeni uslugu</title>
</head>
<body>
<div id="addForm" style="width:30%;">
    <form action="/dbManager/services/{{service.id}}/update" method="post">
        <div class="form-group">
            <label for="servicename">Naziv usluge</label>
            <input type="text" class="form-control" name="servicename" value="{{service.servicename}}"/>
        </div>
        <div class="form-group">
            <label for="price">Cena</label>
            <input type="text" class="form-control" name="price" value="{{service.price}}"/>
        </div>
        <div class="form-group">
            <label for="description">Opis</label>
            <input type="text" class="form-control" name="description" value="{{service.description}}"/>
        </div>
        <button type="submit" class="btn btn-primary">Izmeni uslugu</button>
    </form>
</div>



