            {{#services}}

        <tr class="success">
            <th>{{id}}</th>
            <th>{{servicename}}</th>
            <th>{{price}}</th>
            <th>{{description}}</th>
            <td><a href="/dbManager/services/{{id}}/update" class="btn btn-info">Izmeni</a></td>
            <td><a href="/dbManager/services/{{id}}/delete" class="btn btn-danger">Obrisi</a></td>
        </tr>
        {{/services}}
