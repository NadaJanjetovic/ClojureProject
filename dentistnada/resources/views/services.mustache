    <table class="table table-bordered table-hover">
        <tr>

            <th bgcolor="#00bfff">ID</th>
            <th bgcolor="#00bfff">Naziv usluge</th>
            <th bgcolor="#00bfff">Cena</th>
            <th bgcolor="#00bfff">Opis</th>
